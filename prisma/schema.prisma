// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Beat {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String
  bpm        Int
  key        String
  audioSrc   String
  price      Int
  producerId String
  purchased  Boolean
  producer   Producer @relation(fields: [producerId], references: [id])
  orders     Order[]
  downloads  Download[]
}

model Producer {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  email     String   @unique
  password  String
  beats     Beat[]   
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String
  address   String
  orders    Order[]
}

model Order {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  price     Float
  userId    String
  beatId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  beat      Beat     @relation(fields: [beatId], references: [id], onDelete: Restrict)
}

model Download {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  beatId    String
  beat      Beat     @relation(fields: [beatId], references: [id], onDelete: Cascade)
}